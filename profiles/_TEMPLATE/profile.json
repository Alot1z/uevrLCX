{
  "$schema": "../../adapter.schema.json",
  "version": 2,
  "engine": "Custom-Engine",
  "engine_version": "1.0.0",
  "game_info": {
    "executable": "GAME_NAME.exe",
    "display_name": "Game Display Name",
    "steam_app_id": "",
    "epic_app_id": ""
  },
  "render": {
    "api": "d3d11",
    "swapchain_hook": "IDXGISwapChain::Present",
    "matrix_sources": {
      "view": {
        "cb_slot": 0,
        "offset": 0,
        "rows": 4,
        "cols": 4,
        "layout": "row_major",
        "transpose": false
      },
      "projection": {
        "cb_slot": 0,
        "offset": 64,
        "rows": 4,
        "cols": 4,
        "layout": "row_major",
        "transpose": false
      }
    },
    "fov_policy": "dynamic",
    "stereo_mode": "sequential",
    "depth_handling": "native",
    "hook_points": [
      {
        "function": "Present",
        "type": "pre",
        "description": "Pre-present hook for VR rendering"
      },
      {
        "function": "DrawIndexed",
        "type": "post",
        "description": "Post-draw hook for stereo rendering"
      }
    ]
  },
  "camera": {
    "world_scale": 1.0,
    "hmd_offsets": {
      "x": 0.0,
      "y": 0.0,
      "z": 0.0
    },
    "decoupled_pitch": true,
    "motion_compensation": true
  },
  "ui": {
    "projection": {
      "technique": "billboard",
      "scale": 1.0
    },
    "overrides": [
      {
        "name": "HUD",
        "mode": "world",
        "scale": 1.2
      },
      {
        "name": "Menu",
        "mode": "screen",
        "scale": 1.0
      }
    ]
  },
  "input": {
    "aim_method": "right",
    "bindings": {
      "trigger": "right_trigger",
      "grip": "right_grip",
      "menu": "right_menu",
      "system": "right_system"
    },
    "haptic_feedback": true
  },
  "attachments": [
    {
      "path": "PlayerPawn>Components>Weapon",
      "controller": "right",
      "permanent": false,
      "rotation_quat": {
        "w": 1.0,
        "x": 0.0,
        "y": 0.0,
        "z": 0.0
      },
      "location_offset": {
        "x": 0.0,
        "y": 0.0,
        "z": 0.0
      }
    }
  ],
  "performance": {
    "resolution_scale": 1.0,
    "uncap_framerate": true,
    "async_reprojection": true,
    "motion_smoothing": true
  },
  "vr_features": {
    "stereo_rendering": true,
    "motion_controllers": true,
    "haptic_feedback": true,
    "dynamic_fov": true,
    "frame_interpolation": false,
    "neural_upscaling": false,
    "ray_tracing": false,
    "temporal_upsampling": false
  },
  "compatibility_tier": 1,
  "notes": [
    "Template profile - customize for specific game",
    "Update executable name and display name",
    "Configure matrix sources based on game's rendering",
    "Adjust world scale for comfortable VR experience",
    "Set up weapon attachments for immersive gameplay"
  ]
}


