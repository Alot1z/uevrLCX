{
  "$schema": "../../../adapter.schema.json",
  "version": 2,
  "engine": "MT-Framework",
  "engine_version": "2.0+",
  "game_info": {
    "executable": "GAME_NAME.exe",
    "display_name": "Game Display Name",
    "steam_app_id": "",
    "epic_app_id": ""
  },
  "render": {
    "api": "d3d11",
    "swapchain_hook": "IDXGISwapChain::Present",
    "matrix_sources": {
      "view": {
        "cb_slot": 0,
        "offset": 0,
        "rows": 4,
        "cols": 4,
        "layout": "row_major",
        "transpose": false
      },
      "projection": {
        "cb_slot": 0,
        "offset": 64,
        "rows": 4,
        "cols": 4,
        "layout": "row_major",
        "transpose": false
      }
    },
    "fov_policy": "dynamic",
    "stereo_mode": "sequential",
    "depth_handling": "native",
    "hook_points": [
      {
        "function": "Present",
        "type": "pre",
        "description": "Pre-present hook for VR rendering"
      },
      {
        "function": "DrawIndexed",
        "type": "post",
        "description": "Post-draw hook for stereo rendering"
      },
      {
        "function": "VSSetConstantBuffers",
        "type": "pre",
        "description": "Hook for matrix injection"
      }
    ]
  },
  "camera": {
    "world_scale": 1.2,
    "hmd_offsets": {
      "x": 0.0,
      "y": 0.0,
      "z": 0.0
    },
    "decoupled_pitch": true,
    "motion_compensation": true
  },
  "ui": {
    "projection": {
      "technique": "billboard",
      "scale": 1.0
    },
    "overrides": [
      {
        "name": "HUD",
        "mode": "world",
        "scale": 1.1
      },
      {
        "name": "Inventory",
        "mode": "screen",
        "scale": 1.0
      },
      {
        "name": "Quest",
        "mode": "world",
        "scale": 1.2
      }
    ]
  },
  "input": {
    "aim_method": "right",
    "bindings": {
      "trigger": "right_trigger",
      "grip": "right_grip",
      "menu": "right_menu",
      "system": "right_system"
    },
    "haptic_feedback": true
  },
  "attachments": [
    {
      "path": "PlayerCharacter>Components>WeaponMesh",
      "controller": "right",
      "permanent": false,
      "rotation_quat": {
        "w": 1.0,
        "x": 0.0,
        "y": 0.0,
        "z": 0.0
      },
      "location_offset": {
        "x": 0.0,
        "y": 0.0,
        "z": 0.0
      }
    }
  ],
  "performance": {
    "resolution_scale": 1.0,
    "uncap_framerate": true,
    "async_reprojection": true,
    "motion_smoothing": true
  },
  "vr_features": {
    "stereo_rendering": true,
    "motion_controllers": true,
    "haptic_feedback": true,
    "dynamic_fov": true,
    "frame_interpolation": false,
    "neural_upscaling": false,
    "ray_tracing": false,
    "temporal_upsampling": false
  },
  "compatibility_tier": 3,
  "notes": [
    "MT Framework template - optimized for Monster Hunter style games",
    "Uses D3D11 with sequential stereo rendering",
    "Animation system integration for smooth movement",
    "Third-person to first-person conversion support",
    "Larger world scale for action gameplay",
    "Billboard UI projection for classic feel"
  ]
}


