{
  "$schema": "../../adapter.schema.json",
  "version": 2,
  "engine": "REDengine4",
  "engine_version": "4.0+",
  "game_info": {
    "executable": "Cyberpunk2077.exe",
    "display_name": "Cyberpunk 2077",
    "steam_app_id": "1091500",
    "epic_app_id": "Cyberpunk2077"
  },
  "render": {
    "api": "d3d12",
    "swapchain_hook": "IDXGISwapChain3::Present1",
    "matrix_sources": {
      "view": {
        "cb_slot": 1,
        "offset": 0,
        "rows": 4,
        "cols": 4,
        "layout": "row_major",
        "transpose": false
      },
      "projection": {
        "cb_slot": 1,
        "offset": 64,
        "rows": 4,
        "cols": 4,
        "layout": "row_major",
        "transpose": false
      },
      "viewproj": {
        "cb_slot": 1,
        "offset": 128,
        "rows": 4,
        "cols": 4,
        "layout": "row_major",
        "transpose": false
      }
    },
    "fov_policy": "dynamic",
    "stereo_mode": "multiview",
    "depth_handling": "override",
    "hook_points": [
      {
        "function": "Present1",
        "type": "pre",
        "description": "Pre-present hook for VR rendering"
      },
      {
        "function": "DrawIndexedInstanced",
        "type": "post",
        "description": "Post-draw hook for stereo rendering"
      },
      {
        "function": "SetGraphicsRootConstantBufferView",
        "type": "pre",
        "description": "Hook for matrix injection"
      },
      {
        "function": "SetGraphicsRootShaderResourceView",
        "type": "pre",
        "description": "Hook for ray tracing resources"
      }
    ]
  },
  "camera": {
    "world_scale": 0.75,
    "hmd_offsets": {
      "x": 0.0,
      "y": -0.15,
      "z": 0.0
    },
    "decoupled_pitch": true,
    "motion_compensation": true
  },
  "ui": {
    "projection": {
      "technique": "depth",
      "scale": 1.2
    },
    "overrides": [
      {
        "name": "HUD",
        "mode": "world",
        "scale": 1.4
      },
      {
        "name": "Inventory",
        "mode": "screen",
        "scale": 1.0
      },
      {
        "name": "Dialogue",
        "mode": "world",
        "scale": 1.3
      },
      {
        "name": "MiniMap",
        "mode": "world",
        "scale": 1.1
      },
      {
        "name": "HealthBar",
        "mode": "world",
        "scale": 1.2
      }
    ]
  },
  "input": {
    "aim_method": "right",
    "bindings": {
      "trigger": "right_trigger",
      "grip": "right_grip",
      "menu": "right_menu",
      "system": "right_system"
    },
    "haptic_feedback": true
  },
  "attachments": [
    {
      "path": "PlayerCharacter>Components>WeaponMesh",
      "controller": "right",
      "permanent": false,
      "rotation_quat": {
        "w": 0.707,
        "x": 0.0,
        "y": 0.0,
        "z": 0.707
      },
      "location_offset": {
        "x": 0.0,
        "y": 0.0,
        "z": 0.0
      }
    },
    {
      "path": "PlayerCharacter>Components>Cyberdeck",
      "controller": "left",
      "permanent": false,
      "rotation_quat": {
        "w": 1.0,
        "x": 0.0,
        "y": 0.0,
        "z": 0.0
      },
      "location_offset": {
        "x": 0.0,
        "y": 0.0,
        "z": 0.0
      }
    }
  ],
  "performance": {
    "resolution_scale": 0.85,
    "uncap_framerate": true,
    "async_reprojection": true,
    "motion_smoothing": true
  },
  "vr_features": {
    "stereo_rendering": true,
    "motion_controllers": true,
    "haptic_feedback": true,
    "dynamic_fov": true,
    "frame_interpolation": false,
    "neural_upscaling": true,
    "ray_tracing": true,
    "temporal_upsampling": true
  },
  "compatibility_tier": 5,
  "notes": [
    "Cyberpunk 2077 - Complete VR profile with ray tracing support",
    "REDengine4 optimized with multiview stereo rendering",
    "Ray tracing enabled for enhanced visual fidelity",
    "Temporal upsampling for better performance",
    "Depth-based UI projection for immersive experience",
    "Optimized world scale for urban environment comfort",
    "Weapon and cyberdeck attachments for immersive gameplay",
    "Enhanced HUD scaling for VR visibility",
    "Performance optimized for high-end VR systems"
  ]
}


