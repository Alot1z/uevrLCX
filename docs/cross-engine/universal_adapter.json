{
  "cross_engine_framework": {
    "version": "1.0.0",
    "description": "Universal Cross-Engine VR Adapter Framework for uevr",
    "target_engines": [
      "RE_Engine",
      "REDengine4", 
      "MT_Framework"
    ],
    "compatibility": "uevr_Plugin_Architecture_v1.0"
  },
  "universal_settings": {
    "vr_enabled": true,
    "stereo_rendering": true,
    "performance_mode": "balanced",
    "auto_engine_detection": true,
    "fallback_mode": true
  },
  "memory_management": {
    "pattern_scanning": true,
    "address_validation": true,
    "fallback_hooks": true,
    "resource_pooling": true,
    "garbage_collection": true,
    "memory_mapping": true
  },
  "performance_optimization": {
    "dynamic_lod": true,
    "frustum_culling": true,
    "shader_optimization": true,
    "resource_pooling": true,
    "performance_monitoring": true,
    "adaptive_quality": true
  },
  "camera_system": {
    "universal_settings": {
      "world_scale": 1.0,
      "decoupled_pitch": true,
      "camera_interpolation": true,
      "camera_smoothing": 0.8
    },
    "engine_specific": {
      "RE_Engine": {
        "horror_game_optimization": true,
        "camera_offsets": {
          "forward": 0.0,
          "right": 0.0,
          "up": 0.0
        }
      },
      "REDengine4": {
        "open_world_optimization": true,
        "camera_offsets": {
          "forward": 0.0,
          "right": 0.0,
          "up": 0.0
        }
      },
      "MT_Framework": {
        "third_person_conversion": true,
        "camera_offsets": {
          "forward": 0.0,
          "right": 0.0,
          "up": 0.0
        }
      }
    }
  },
  "input_mapping": {
    "universal_mapping": {
      "weapon_to_right_controller": true,
      "utility_to_left_controller": true,
      "permanent_weapon_changes": true,
      "permanent_utility_changes": false
    },
    "controller_settings": {
      "aim_method": "right_controller",
      "snap_turning": false,
      "turn_angle": 45.0,
      "joystick_deadzone": 0.2
    }
  },
  "vr_configuration": {
    "runtime": "openxr",
    "session_settings": {
      "form_factor": "head_mounted_display",
      "environment_blend_mode": "opaque",
      "view_configuration": "primary_stereo"
    },
    "reference_spaces": {
      "view_space": "XR_REFERENCE_SPACE_TYPE_VIEW",
      "local_space": "XR_REFERENCE_SPACE_TYPE_LOCAL"
    },
    "performance_settings": {
      "target_frame_rate": 90,
      "resolution_scale": 0.9,
      "uncapped_framerate": true,
      "vsync": false
    }
  },
  "hook_architecture": {
    "primary_hooks": {
      "d3d11_device_hooks": true,
      "d3d12_device_hooks": true,
      "swapchain_hooks": true,
      "camera_hooks": true,
      "rendering_pipeline_hooks": true
    },
    "fallback_hooks": {
      "memory_pattern_hooks": true,
      "address_validation_hooks": true,
      "performance_monitoring_hooks": true
    },
    "hook_validation": {
      "stability_checking": true,
      "performance_monitoring": true,
      "error_reporting": true
    }
  },
  "compatibility": {
    "mod_support": {
      "reframework": true,
      "redmod": true,
      "community_mods": true,
      "hook_priority_management": true
    },
    "game_versions": {
      "backward_compatibility": true,
      "future_version_support": true,
      "version_validation": true
    },
    "hardware_requirements": {
      "minimum_vr": "Oculus Rift CV1",
      "recommended_vr": "Valve Index",
      "gpu_requirements": "GTX 1060 or equivalent"
    }
  },
  "validation": {
    "vr_experience": {
      "aiming": "precise",
      "locomotion": "smooth",
      "ui_readability": "clear",
      "interaction_reach": "proper",
      "comfort": "stable",
      "performance": "consistent"
    },
    "technical": {
      "hook_stability": "stable",
      "memory_management": "efficient",
      "frame_timing": "proper",
      "rendering_quality": "high"
    }
  },
  "development": {
    "status": "production_ready",
    "testing_environment": {
      "hardware": "various_vr_headsets",
      "software": "multiple_game_versions",
      "performance": "benchmarked"
    },
    "future_enhancements": [
      "advanced_camera_control",
      "performance_scaling",
      "mod_integration",
      "multiplayer_vr",
      "ray_tracing_vr"
    ]
  },
  "documentation": {
    "architecture": "docs/cross-engine/",
    "uevr_integration": "uevr documentation",
    "openxr_reference": "Khronos OpenXR specification",
    "memory_management": "docs/cross-engine/memory_management.md",
    "adapter_development": "docs/cross-engine/adapter_development.md"
  }
}
